#!/usr/bin/env php
<?php
if (!is_dir("vendor")) {
	echo "Run in non-composer directory. Cannot find 'vendor' directory in current path.\n";
	exit(1);
}
echo "export index.php:";
if (!is_file("index.php")) {
	copy(__DIR__ . "/../storage/private/templates/index.template", "index.php");
	echo "Success\n";
} else {
	echo "Aleady exists\n";
}
if (!is_dir("config")) {
	mkdir("config");
}
echo "export config.php:";
if (!is_file("config/config.php")) {
	copy(__DIR__ . "/../storage/private/templates/config.template", "config/config.php");
	echo "Success\n";
} else {
	echo "Aleady exists\n";
}